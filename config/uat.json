{
  "environment": "uat",
  "app": {
    "name": "Gig Grid UAT",
    "version": "1.0.0",
    "debug": false
  },
  "api": {
    "baseUrl": "https://api-uat.gigrid.com",
    "timeout": 10000,
    "mockData": false
  },
  "database": {
    "type": "dynamodb",
    "region": "ap-southeast-1",
    "tablePrefix": "GigGrid-UAT-",
    "billingMode": "PAY_PER_REQUEST",
    "freeTier": true,
    "readCapacityUnits": 5,
    "writeCapacityUnits": 5,
    "tables": {
      "users": "GigGrid-UAT-Users",
      "artists": "GigGrid-UAT-Artists",
      "events": "GigGrid-UAT-Events",
      "bookings": "GigGrid-UAT-Bookings",
      "payments": "GigGrid-UAT-Payments"
    }
  },
  "email": {
    "provider": "aws-ses",
    "region": "ap-southeast-1",
    "sandboxMode": true,
    "freeTier": true,
    "monthlyLimit": 200,
    "from": "noreply@gigrid-uat.com",
    "replyTo": "support@gigrid-uat.com"
  },
  "authentication": {
    "provider": "aws-cognito",
    "region": "ap-southeast-1",
    "freeTier": true,
    "monthlyActiveUsers": 50000,
    "userPoolId": "${AWS_COGNITO_USER_POOL_ID_UAT}",
    "clientId": "${AWS_COGNITO_CLIENT_ID_UAT}",
    "sessionTimeout": 7200000,
    "enableTwoFactor": false,
    "mfaConfiguration": "OFF"
  },
  "storage": {
    "provider": "aws-s3",
    "region": "ap-southeast-1",
    "bucket": "gigrid-uat-uploads",
    "freeTier": true,
    "storageLimit": "5GB",
    "maxFileSize": "5MB",
    "requestLimit": 20000,
    "allowedTypes": ["image/jpeg", "image/png", "image/webp", "audio/mpeg", "audio/wav"],
    "cdn": {
      "enabled": false
    }
  },
  "aws": {
    "amplify": {
      "appId": "${AWS_AMPLIFY_APP_ID_UAT}",
      "branch": "uat",
      "freeTier": true,
      "buildMinutes": 1000
    },
    "lambda": {
      "region": "ap-southeast-1",
      "freeTier": true,
      "requestLimit": 1000000,
      "computeTime": 400000
    },
    "apiGateway": {
      "region": "ap-southeast-1",
      "stage": "uat",
      "freeTier": true,
      "requestLimit": 1000000
    }
  },
  "features": {
    "registration": true,
    "socialLogin": false,
    "emailVerification": true,
    "profileManagement": true,
    "artistVerification": false,
    "paymentProcessing": false,
    "bookingSystem": true,
    "messaging": false,
    "notifications": true
  },
  "ui": {
    "theme": "production",
    "showDebugInfo": false,
    "enableHotReload": false
  },
  "logging": {
    "level": "warn",
    "cloudWatch": true,
    "logGroup": "/aws/lambda/gigrid-uat",
    "console": false
  },
  "monitoring": {
    "enabled": true,
    "cloudWatch": true,
    "xray": true,
    "performanceMonitoring": true
  },
  "security": {
    "rateLimit": {
      "enabled": true,
      "requests": 100,
      "window": 900000
    },
    "cors": {
      "origins": ["https://uat.gigrid.com"],
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "credentials": true
    }
  }
}
